<?php
/**
 * Plugin Name: NEW SOCIAL SHARE
 * Description: Social share buttons plugin
 * Version: 1.0
 * Author: KAMGOKO
 */
?>

<?php

class New_social_share
{
    public function __construct()
    {
        $this->init();
    }

    private function init(){
        add_action('the_content', [$this,'add_icon_to_content']);
    }

    private function add_icon_to_content($post){
        vdump_pre($post);
        exit();
    }
}

new New_social_share();

?>